---

import BaseLayout from '../layouts/BaseLayout.astro';


// import Navigation from '../components/Navigation.astro';
// import Footer from '../components/Footer.astro';
// import Header from '../components/Header.astro';


import '../styles/global.css';

const pageTitle = "Sugar Me";

const identity = {
  firstName: "Brad",
  country: "USA",
  occupation: "web animator",
  hobbies: ["musician", "bicyclist", "drinker"],
};

const skills = ["none, none, none", "none", "sleeping"];

const happy = true;
const finished = true;
const goal = 3;


const fontWeight = "bold";
const textCase = "uppercase";
const skillColor ="fuchsia";
// const h1color = "purple";

---

<style is:global define:vars={{skillColor, fontWeight, textCase}}>

    .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
    }
</style>
<BaseLayout pageTitle={pageTitle}>



    <!-- <h1>{pageTitle}</h1> -->
    <!-- <h2>I am many things, such as for example, you.</h2> -->

    <p>I get along with people in general. 
        I have always strived to love everybody. 
        <!-- As a child, I learned that this is the way our saviour Jesus Christ did things. -->
      </p>

    <!-- <p>For work I am currently animating 3D cubes for PwC.</p> -->
    <p>For pleasure, I mostly play music. </p>

    <p>Here are a few facts about me:</p>
    <ul>
      <li>My name is {identity.firstName}.</li>
      <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
      {identity.hobbies.length >= 2 &&
        <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
      }
    </ul>
    <p>My skills are:</p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>


    



</BaseLayout>  



  </body>
</html>
